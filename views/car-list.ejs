<!--<%- JSON.stringify(cars) %>-->

<div class="px-3">
  <div class="row">

    <% _.each(cars, function (car, index) { %>
    <div class="col-md-3 mb-3 d-flex align-items-stretch">
      <div class="card">
        <div class="card-img-top"
             style="background-size:cover; background-position:center center; background-image:url('<%= car.thumbnail %>'); height:200px;">
          <img class="img-fluid" src="<%= car.thumbnail %>" alt="Card image cap" style="opacity:0;">
        </div>
        <div class="card-body d-flex flex-column">
          <h4 class="card-title"><%= car.name %></h4>
          <h6 class="card-subtitle mb-2 text-muted"><%= car.brand %> <%= car.model %></h6>
          <p class="card-text">
            <small><%= car.summary.substring(0, 200) %>...</small>
            <br>
            <a href="#" class=""><small>Read more</small></a>
          </p>
          <a href="/car/details?id=<%= car.id %>" class="btn btn-primary mt-auto ml-auto">More details</a>
        </div>
      </div>
    </div>
    <% }); %>

  </div>
</div>
